rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Функція для перевірки чи є користувач адміном
    function isAdmin() {
      // Замініть на ваш email адміністратора
      return request.auth != null && 
             (request.auth.token.email == 'your-admin-email@gmail.com' ||
              request.auth.token.email == 'another-admin@gmail.com');
    }
    
    // Функція для перевірки чи користувач авторизований
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Публічні колекції - доступні для читання всім
    match /portfolio/{document} {
      allow read: if true;  // Публічне читання
      allow write: if isAdmin();  // Тільки адміни можуть писати
    }
    
    match /certificates/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /skills/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /socialLinks/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /profile/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Translations - публічне читання, адмін запис
    match /translations/{language} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /sections/{section} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }
    
    // Приватні колекції - тільки для адміністраторів
    match /adminSettings/{document} {
      allow read, write: if isAdmin();
    }
    
    match /logs/{document} {
      allow read, write: if isAdmin();
    }
  }
}
