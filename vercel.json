{
    "version": 2,
    "buildCommand": "npm run build:simple",
    "outputDirectory": "dist",
    "installCommand": "rm -rf node_modules package-lock.json && npm install --legacy-peer-deps",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "env": {
        "NODE_VERSION": "18.x"
    },
    "build": {
        "env": {
            "NODE_ENV": "production"
        }
    }
}
